<UserControl x:Class="dbd_screenshot.StatusText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dbd_screenshot"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image x:Name="image_status" Grid.RowSpan="2" Grid.Row="0" HorizontalAlignment="Left" Height="25" Width="25" Margin="0,0,0,0"/>
        <Label x:Name="status_name" Content="Label" Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom"/>
        <Label x:Name="status_log" Content="" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
